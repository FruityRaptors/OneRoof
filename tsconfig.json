{
   "compilerOptions": {
      "lib": [
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["node"],
      "typeRoots" : ["./node_modules/@types"],
      "strictPropertyInitialization": false,
      "baseUrl": "/"
   },
   "include": ["server/**/*"],
   "exclude": ["srd/**/*.spec.ts"]
}